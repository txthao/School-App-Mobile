        android:paddingBottom="5dp" />
    <TextView
        android:id="@+id/txtDKT"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.15"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp" />
    <TextView
        android:id="@+id/txtDT"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.15"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp" />
    <TextView
        android:id="@+id/txtDTK"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.15"
        android:gravity="center"
