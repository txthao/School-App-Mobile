<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@android:color/background_light"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/linearHP">
        <TextView
            android:text="Học Kỳ 1 năm học 2015-2016"
            android:textColor="@android:color/background_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dip"
            android:id="@+id/txtHocKyHP"
            android:layout_marginTop="50px" />
        <LinearLayout
            android:id="@+id/linear10"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="20px"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            style="@style/RowHeader">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Môn Học"
                style="@style/RowHeader"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="Học Phí"
                style="@style/RowHeader"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="Miễn Giảm"
                style="@style/RowHeader"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="Phải Đóng"
                style="@style/RowHeader"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp" />
        </LinearLayout>
        <ProgressBar
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/progressHP" />
        <ListView
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listHP"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:layout_below="@id/linearHP">
        <TextView
            android:text="Tổng số TC: "
            android:textColor="@android:color/background_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dip"
            android:id="@+id/txtTSTC"
            android:layout_marginTop="10px" />
        <TextView
            android:text="Tổng số Tiền Học Phí: "
            android:textColor="@android:color/background_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dip"
            android:id="@+id/txtTSTHP"
            android:layout_marginTop="10px" />
        <TextView
            android:text="Số tiền đóng tối thiểu lần đầu: "
            android:textColor="@android:color/background_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dip"
            android:id="@+id/txtTTLD"
            android:layout_marginTop="10px" />
        <TextView
            android:text="Tổng số Tiền đã đóng: "
            android:textColor="@android:color/background_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dip"
            android:id="@+id/txtTDD"
            android:layout_marginTop="10px" />
        <TextView
            android:text="Số tiền còn nợ: "
            android:textColor="@android:color/background_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dip"
            android:id="@+id/txtTCN"
            android:layout_marginTop="10px" />
    </LinearLayout>
</RelativeLayout>