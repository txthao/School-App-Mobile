<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1"
    android:layout_marginBottom="10dp">
    <LinearLayout
        android:id="@+id/linearLH_Tuan_Thu"
        android:layout_width="0dp"
        android:layout_weight="0.2"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:weightSum="1">
        <TextView
            android:id="@+id/txtThu_Tuan"
            android:layout_height="0dp"
            android:layout_width="fill_parent"
            android:layout_weight="0.3"
            android:gravity="center"
            android:layout_margin="5dp" />
    <!--             android:textColor="#FFFFFF"-->
        <TextView
            android:id="@+id/txtNgay_Tuan"
            android:layout_height="0dp"
            android:layout_width="fill_parent"
            android:layout_weight="0.7"
            android:gravity="center"
            android:layout_margin="5dp"
            android:text="asds" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLH_Tuan"
        android:layout_width="0dp"
        android:layout_weight="0.8"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/txtMon_Tuan"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp" />
        <TextView
            android:id="@+id/txtTietBD_Tuan"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginLeft="5dp" />
        <TextView
            android:id="@+id/txtSoTiet_Tuan"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginLeft="5dp" />
        <TextView
            android:id="@+id/txtPhong_Tuan"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp" />
    </LinearLayout>
</LinearLayout>