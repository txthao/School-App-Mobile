<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:background="@android:color/background_light"
        android:minWidth="25px"
        android:minHeight="25px">
        <TextView
            android:text="Học Kỳ 1 năm học 2015-2016"
            android:textColor="@android:color/background_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dip"
            android:id="@+id/txtHocKyDT"
            android:layout_marginTop="50px" />
        <LinearLayout
            android:id="@+id/linear11"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="20px"
            style="@style/RowHeader">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Môn Học"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                style="@style/RowHeader" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"
                android:text="Tỉ lệ"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                style="@style/RowHeader" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"
                android:text="Điểm KT"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                style="@style/RowHeader" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"
                android:text="Điểm Thi"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                style="@style/RowHeader" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"
                android:text="Điểm TK"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                style="@style/RowHeader" />
        </LinearLayout>
        <ProgressBar
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/progressDT" />
        <ExpandableListView
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10px"
            android:id="@+id/listDT"
            android:groupIndicator="@null"
            android:layout_above="@id/linear11" />
    </LinearLayout>
</RelativeLayout>